<h1>Add A New Movie</h1>

<form action="http://localhost:3000/create_movie">
  <div>
    <label for="movie_title">Movie Title:</label>
    <input id="movie_title" type="text" name="title">
  </div>
  <div>
    <label for="movie_year">Year:</label>
    <input id="movie_year" type="text" name="year" placeholder="YYYY">
  </div>
  <div>
    <label for="movie_duration">Duration:</label>
    <input id="movie_duration" type="text" name="duration" placeholder="minutes">
  </div>
  <div>
    <label for="movie_image_url">Image URL:</label>
    <input id="movie_image_url" type="text" name="image_url">
  </div>
  <div>
    <label for="movie_description">Description:</label>
    <input id="movie_description" type="text" name="description">
  </div>
  <div>
    <button>Add Movie</button>
  </div>
</form>
